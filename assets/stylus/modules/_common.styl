h1, h2, h3 {
  font-family: 'Roboto', sans-serif;  
  color: #454545;      
  line-height: 1.2;  
}

h1 {
  font-size: 3.2rem;
}

h2 {
  font-size: 2.1rem;
  border-radius: 2px;
  display: inline-block;
  
  padding: 1rem;
  padding-left: 1.5rem;
  padding-right: 1.5rem;

  margin-bottom: 1rem;
  box-shadow: 4px 4px 5px 0px darkgrey;  
  background: white;
  border-bottom: 5px solid yellow;

  transition: color .2s;
}

h2:hover {
  color: orange;
}

h3 {
  font-size: 1.6rem;
  padding-left: 1.5rem;
}

p {
  color: #454545;      
  line-height: 1.5;  
  font-size: 1.1rem;
}

ul {
  list-style: none;
  margin: 3rem 0;

  li {
    font-size: 1.1rem;
    line-height: 1.5;    
    padding: 0.7rem;
    padding-left: 1.5rem;
    // background: darkgrey;
    color: black;
    margin-bottom: 0.8rem;
    box-shadow: 0 2px 5px 0 rgba(0,0,0,.16), 0 2px 5px 0 rgba(0,0,0,.12);
    transition: box-shadow .2s;
  }

  li:hover {
    box-shadow: 0 2px 12px 0 rgba(0,0,0,.16), 0 2px 12px 0 rgba(0,0,0,.12);
  }
}


.btn:hover {
  box-shadow: 0 2px 15px 0 rgba(0,0,0,.16), 0 2px 15px 0 rgba(0,0,0,.12);
}

